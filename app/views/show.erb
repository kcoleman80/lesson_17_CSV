<div class="show_anagrams">
  <h1 >Anagrams for <%= "#{@word.upcase}" %></h1>
<ul class="list">
    <% if !@anagrams.nil? %>
        <% @anagrams.each do |item| %>
          <li>
            <%= "#{item.text}" %>
          </li>
        <% end %>
      <% else %>
        <%= "No Anagrams for this word" %>
    <% end %>
  </ul>
</div>
